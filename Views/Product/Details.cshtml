@model GameDrop.Models.GameDrop_Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container my-4">
    <h1 class="text-center text-primary">@ViewData["Title"]</h1>
    <h4 class="text-center text-muted">View details of the selected product</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Product Details</h5>
                </div>
                <div class="card-body d-flex align-items-start">
                    <!-- Product Image -->
                    <div class="me-4">
                        @if (Model.ProductImageData != null && Model.ProductImageData.Length > 0)
                        {
                        <img src="data:@Model.ProductImageType;base64,@Convert.ToBase64String(Model.ProductImageData)"
                             alt="Product Image"
                             class="img-fluid rounded shadow-sm"
                             style="max-width: 150px; max-height: 150px;" />
                        }
                        else
                        {
                        <div class="text-muted border rounded d-flex align-items-center justify-content-center"
                             style="width: 150px; height: 150px;">
                            No image available
                        </div>
                        }
                    </div>

                    <!-- Product Details -->
                    <div class="flex-grow-1">
                        <dl class="row mb-0">
                            <!-- Product Name -->
                            <dt class="col-sm-4 fw-bold text-secondary">Name</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>

                            <!-- Product Description -->
                            <dt class="col-sm-4 fw-bold text-secondary">Description</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductDescription)</dd>

                            <!-- Product Price -->
                            <dt class="col-sm-4 fw-bold text-secondary">Price (฿)</dt>
                            <dd class="col-sm-8 text-success fw-bold">
                                @Html.DisplayFor(model => model.ProductPrice)
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-primary me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a onclick="history.back()" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
