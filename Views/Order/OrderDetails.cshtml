@model List<GameDrop.Services.CartItem>

@{
    ViewBag.Title = "Order Details";
    var userAddresses = ViewBag.UserAddresses as List<GameDrop.Models.GameDrop_UserAddress>;
}
<div class="card mb-3">
    <div class="card-header">
        Order Progression
    </div>
    <div class="card-body">
        <div class="progress" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar" style="width: 25%"></div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p class="text-center">Order Review</p>
        </div>
        <div class="col">
            <p class="text-center">Payment Pending</p>
        </div>
        <div class="col">
            <p class="text-center">Payment Completed</p>
        </div>
        <div class="col">
            <p class="text-center">Order Shipped</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card-body">
                <h5 class="card-title">Order ID: @ViewBag.OrderId</h5>
                <p class="card-text mb-0">Order Date: @DateTime.Now</p>
                <p class="card-text">Order Status: Pending</p>
            </div>
        </div>
    </div>
</div>

<h2>Order Details</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>฿@item.Product.ProductPrice</td>
                <td>฿@(item.Product.ProductPrice * item.Quantity)</td>
                <td>
                    @if (item.Product.ProductImageData != null)
                    {
                        var base64Image = Convert.ToBase64String(item.Product.ProductImageData);
                        var imageType = item.Product.ProductImageType;
                        <img src="data:@imageType;base64,@base64Image" alt="Product Image" style="width: 100px; height: auto;" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container d-flex flex-column">
    <form asp-action="ProceedToPayment" asp-controller="Order" method="post">
        <div class="card card-body">
            <div class="form-group">
                <label for="UserAddress">Select Address</label>
                <select class="form-control mb-3" name="SelectedAddressId">
                    @if (userAddresses != null)
                    {
                        @foreach (var address in userAddresses)
                        {
                            <option value="@address.UserAddressId">@address.UserAddress, @address.UserCity, @address.UserState, @address.UserZip, @address.UserCountry</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="container-fluid mb-3">
            <a class="btn btn-outline-primary" asp-controller="UserAddress" asp-action="Create">Add New Address</a>
        </div>
        <div class="container-fluid">
            <button type="submit" class="btn btn-primary">Proceed to Payment</button>
        </div>
    </form>
</div>