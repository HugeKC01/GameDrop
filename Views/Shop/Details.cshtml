@model GameDrop.Models.GameDrop_Product

@{
    ViewData["Title"] = @Model.ProductName;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}


<div class="container w-100" style="margin-top:1.4em;">
    <div class="d-flex align-items-center mb-3">
        <a asp-action="shop" class="btn me-2" style="margin:0; padding:0; outline:none;">
            <span class="material-symbols-rounded" style="font-size:1.4em;">arrow_back</span>
        </a>
        <h3>@Model.ProductName</h3>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-4" style="margin-bottom:20px;">
            <div class="card">
                @if (Model.ProductImageData != null && Model.ProductImageData.Length > 0 && !string.IsNullOrEmpty(Model.ProductImageType))
                {
                    var base64 = Convert.ToBase64String(Model.ProductImageData);
                    var imgSrc = $"data:{Model.ProductImageType};base64,{base64}";
                    <img src="@imgSrc" alt="Product Image" class="card-img-top" style="width:100%;" />
                }
            </div>
        </div>
        <div class="col-sm-8">
            <div class="card" style="margin-bottom:20px;">
                <div class="card-header">Product Details</div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>Description</b><br />
                        @Model.ProductDescription
                    </li>
                    <li class="list-group-item">
                        <b>Price</b><br />
                        <h3>à¸¿@Model.ProductPrice</h3>
                    </li>
                    <li class="list-group-item">
                        <b>Available Quantity</b><br />
                        @Model.Quantity
                    </li>
                </ul>
            </div>
            <div class="card">
                <div class="card-body">
                    <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
                        <div class="input-group mb-3">
                            <input type="number"
                                   class="form-control"
                                   id="quantity"
                                   name="quantity"
                                   value="1"
                                   min="1"
                                   max="@Model.Quantity" />
                        </div>
                        <input type="hidden" name="productId" value="@Model.ProductId" />
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>